<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authentication.register.registerfragment.RegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:background="@drawable/di_login_view">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/di_login_input_frame"
            android:gravity="center"
            android:layout_marginTop="35dp"
            app:layout_constraintBottom_toTopOf="@+id/register_f_h_line7"
            app:layout_constraintEnd_toStartOf="@+id/register_f_v_line2"
            app:layout_constraintStart_toStartOf="@+id/register_f_v_line"
            app:layout_constraintTop_toTopOf="@+id/register_f_h_line9">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ph_user" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#000000" />

            <EditText
                android:id="@+id/register_username_edittext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@null"
                android:maxLines="1"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/di_login_input_frame"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/register_f_h_line"
            app:layout_constraintEnd_toStartOf="@+id/register_f_v_line2"
            app:layout_constraintStart_toStartOf="@+id/register_f_v_line"
            app:layout_constraintTop_toTopOf="@+id/register_f_h_line7">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ph_email" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#000000" />

            <EditText
                android:id="@+id/register_email_edittext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:background="@drawable/di_login_input_frame"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/register_f_h_line2"
            app:layout_constraintEnd_toStartOf="@+id/register_f_v_line2"
            app:layout_constraintStart_toStartOf="@+id/register_f_v_line"
            app:layout_constraintTop_toTopOf="@+id/register_f_h_line">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ph_lock" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#000000" />

            <EditText
                android:id="@+id/register_password_edittext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@null"
                android:maxLines="1"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/register_f_h_line6"
            app:layout_constraintEnd_toStartOf="@+id/register_f_v_line2"
            app:layout_constraintStart_toStartOf="@+id/register_f_v_line"
            app:layout_constraintTop_toTopOf="@+id/register_f_h_line3"
            app:layout_constraintVertical_bias="0.0">


            <Button
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:textColor="@color/text_100"
                android:background="@drawable/di_login_button_back"
                android:text="@string/register"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/register_f_h_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/register_f_h_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/register_f_h_line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/register_f_h_line6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.47" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/register_f_h_line9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/register_f_h_line7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/register_f_v_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/register_f_v_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>